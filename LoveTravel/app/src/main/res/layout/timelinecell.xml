<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:src="@drawable/icon_morecustom_12" />
            <View
                android:layout_width="3dip"
                android:layout_height="60dip"
                android:layout_marginLeft="21dip"
                android:background="@android:color/darker_gray" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="9dp"
            android:id="@+id/tv_travel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ll_left"
            android:layout_marginLeft="3dip"
            android:layout_toRightOf="@id/ll_left"
            android:textColor="#f6466c"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_travel_shortmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_travel_title"
            android:layout_below="@id/tv_travel_title"
            android:layout_marginTop="5dip"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_alignLeft="@id/tv_travel_shortmsg"
            android:layout_below="@id/tv_travel_title"
            android:layout_marginTop="30dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_travel_month_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f6466c"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_travel_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:textColor="#f6466c"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
